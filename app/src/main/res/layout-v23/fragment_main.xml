<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.place.MqttFragment">

    <RelativeLayout
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:visibility="gone"
            android:id="@+id/search_fragment_include"
            layout="@layout/debug_edit_text_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/plugin_status_fragment_include"
            layout="@layout/plugin_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_fragment_include"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp" />

        <include
            android:id="@+id/interact_fragment_include"
            layout="@layout/interact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/plugin_status_fragment_include"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"/>

        <include
            android:id="@+id/timer_fragment_layout_include"
            layout="@layout/timer_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/interact_fragment_include"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"/>

    </RelativeLayout>
</ScrollView>
